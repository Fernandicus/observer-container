{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true ,
    "strict": true ,
    "declaration": true,
    "skipLibCheck": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
